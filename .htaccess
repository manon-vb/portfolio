# Configuration for Apache servers (most shared hosting providers)

# Enable MIME types for font files
<IfModule mod_mime.c>
  AddType font/otf .otf
  AddType font/ttf .ttf
  AddType font/woff .woff
  AddType font/woff2 .woff2
</IfModule>

# Allow font files to be accessed from any domain (CORS)
<IfModule mod_headers.c>
  <FilesMatch "\.(otf|ttf|woff|woff2)$">
    Header set Access-Control-Allow-Origin "*"
  </FilesMatch>
</IfModule>
